{
  "folders": [
    {
      "path": "."
    }
  ],
  "settings": {
    "terminal.integrated.automationShell.windows": "cmd",
    "task.autoDetect": "on"
  },
  "extensions": {
    "recommendations": [
      "bradlc.vscode-tailwindcss",
      "ms-vscode.vscode-typescript-next",
      "esbenp.prettier-vscode",
      "dbaeumer.vscode-eslint"
    ]
  },
  "tasks": {
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Auto Start Dev Environment",
        "type": "shell",
        "command": "npm",
        "args": ["run", "dev:setup"],
        "group": "build",
        "runOptions": {
          "runOn": "folderOpen"
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared"
        }
      }
    ]
  }
} 